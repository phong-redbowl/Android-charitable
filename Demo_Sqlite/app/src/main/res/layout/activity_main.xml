<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:background="@drawable/iconadmin"
        android:textColor="#FFFF00"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:background="@drawable/iconpass"
        android:textSize="20dp"
        android:textColor="#FFFF00"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="30dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUserName"
        android:textColor="#F000"
        android:hint="Email"
        android:inputType="textPersonName"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="87dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassWord"
        android:textColor="#F000"
        android:hint="Passwords"
        android:inputType="textPassword"
        android:layout_marginTop="273dp"
        android:layout_marginLeft="87dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:id="@+id/buttonLogin"
        android:background="@drawable/imgsignin"
        android:layout_alignTop="@+id/editTextPassWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:id="@+id/buttonSignUp"
        android:background="@drawable/imgsignup"
        android:layout_below="@+id/buttonLogin"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:id="@+id/buttonfb"
        android:background="@drawable/imgfacebook"
        android:layout_alignTop="@+id/buttonSignUp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="200dp"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="37dp"
        android:id="@+id/buttongg"
        android:background="@drawable/imggoogle"
        android:layout_alignTop="@+id/buttonSignUp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget passwords ?"
        android:textColor="#F000"
        android:layout_below="@+id/buttonSignUp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="230dp"/>


</RelativeLayout>
