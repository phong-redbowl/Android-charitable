<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="demoapp.akiraaman.demo_sqlite.QuanLy_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Member"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật Khẩu Cũ : "
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật Khẩu Mới : "
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác Nhập MK : "
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_marginTop="150dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:id="@+id/editTextMK1"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:id="@+id/editTextMK2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="120dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:id="@+id/editTextXNMK2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="120dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#800040"
        android:text="Đổi Mật Khẩu"
        android:id="@+id/buttonDoiMK"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Đăng Xuất"
        android:id="@+id/buttonLogout"
        android:background="#8080FF"
        android:textColor="#FF0000"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="180dp"/>

</RelativeLayout>
